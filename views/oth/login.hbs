<div class="container">
    <div class="card card-inverse card-danger text-center">
        <div class="card-body">
            <blockquote class="card-blockquote">
                <h3>Welcome to Admin Pannel</h3>
                <p>Login page Sample </p>
            </blockquote>
        </div>
    </div>
</div>
<br><br>
<div class="container">
    <div class="row">
        <div class="col-3 d-none d-lg-block"></div>
        <div class="col-12 col-lg-6">
            <div class="card">
                <h3 class="card-header text-center">
                    <i> Input your Username and Password </i>
                </h3>
                <div class="card-body">

                       {{#if hasErrors}}
                        <div class="alert alert-danger">
                            {{#each mess}}
                            <p>{{this}}</p>
                            {{/each}}
                        </div>
                    {{/if}}



                    <br>
                    <form action="/admin/login" method="POST">
                        <div class="form-group row">
                            <label class="col-12 col-md-4 col-form-label text-center">
                                <b>Email</b>
                            </label>
                            <div class="col-12 col-md-8">
                                <input type="email" name="emlTest" class="form-control" placeholder="Email">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-12 col-md-4 col-form-label text-center">
                                <b>Password</b>
                            </label>
                            <div class="col-12 col-md-8">
                                <input type="password" name="pTest" class="form-control" placeholder="Password">
                            </div>
                        </div>

                        <div class="form-group row text-center">
                            <div class="offset-sm-2 col-sm-10">
                                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                                <button type="submit" class="btn btn-outline-dark">Log in</button>
                                <button type="reset" class="btn btn-outline-danger">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted text-center">
                    <a href="/admin/signup"> <button type="button" class="btn btn-outline-success">Go to Registration</button></a>
                </div>
            </div>
        </div>
    </div>
</div>